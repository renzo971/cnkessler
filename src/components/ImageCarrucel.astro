---
import { Image } from "astro:assets";
import Typography from "./Typography.astro";

interface Props {
  Arte: ImageMetadata;
  title?: string;
  titlePosition?: "left" | "center" | "right";
}

const {
  Arte,
  title = "Especialistas en tomas",
  titlePosition = "center",
} = Astro.props;
---

<div
  style="position: relative; display: inline-block; width: 100%; height: 100%;"
>
  <Image
    src={Arte}
    alt="Astro Logo"
    height={1978}
    width={5692}
    loading="eager"
  />
  <div
    style={`position: absolute; top: 50%; left: ${
      titlePosition === "left"
        ? "30%"
        : titlePosition === "right"
          ? "75%"
          : "50%"
    }; transform: translate(-50%, -50%); text-align: ${titlePosition}; width: 100%;`}
  >
    <div
      class="animate-fade-in animate-delay-500"
      style="
        max-width: 600px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1rem;
      "
    >
      <div
        style="display: flex; justify-content: center; align-items: center; width: 100%;"
      >
        <div style="margin: 0 auto;">
          <slot />
        </div>
      </div>
      <Typography as="h2" variant="big" color="white" fontStyle="extrabold">
        {title}
      </Typography>
    </div>
  </div>
</div>
