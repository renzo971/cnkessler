---
import Typography from "./Typography.astro";

const googleMapEmbedUrl =
  "https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d124834.2210317432!2d-77.1201859609375!3d-12.107400999999987!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9105c840bd6fb965%3A0x9fdbb6a75370afe0!2sCentro%20Neurodiagn%C3%B3sitco%20Kessler!5e0!3m2!1ses-419!2spe!4v1743786074734!5m2!1ses-419!2spe";
---

<footer class="relative bg-violeta text-white py-10">
  <div class="absolute inset-0">
    <img
      src="/images/fondo-contacto.jpg"
      alt="Fondo"
      class="w-full h-full object-cover opacity-40"
    />
  </div>
  <div
    class="relative max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-6 px-4"
  >
    <div>
      <Typography as="h2" variant="h2" color="white"> CONTÁCTANOS </Typography>
      <ul class="mt-4 space-y-2">
        <li class="font-montserrat">
          🌍 <a href="https://www.cnkessler.com" class="underline"
            >www.cnkessler.com</a
          >
        </li>
        <li class="font-montserrat">
          📍 Av. Pardo y Aliaga 581, San Isidro - Interior 101
        </li>
        <li class="font-montserrat">📞 (01) 620 4799 / 992 713 999</li>
        <li class="font-montserrat">
          📷 <a href="#" class="underline">Centro Kessler</a>
        </li>
      </ul>
    </div>
    <div>
      <iframe
        src={googleMapEmbedUrl}
        width="100%"
        height="250"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        class="rounded-lg shadow-lg"></iframe>
    </div>
  </div>
</footer>
